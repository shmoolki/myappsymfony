{% extends '::layout.html.twig' %}

{% block body -%}
    <div class="container">
    <h1>Depot list</h1>
   
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Depotdate</th>
                <th>Depotnummonth</th>
                <th>Depotmontant</th>
                <th>Depotprime</th>
                <th>Depotfirstdeposit</th>
                <th>Depotpoucent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('depot_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.depotDate %}{{ entity.depotDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.depotNumMonth }}</td>
                <td>{{ entity.depotMontant }}</td>
                <td>{{ entity.depotPrime }}</td>
                <td>{{ entity.depotFirstdeposit }}</td>
                <td>{{ entity.depotPoucent }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('depot_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('depot_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('depot_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>            
    {% endblock %}
